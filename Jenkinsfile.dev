pipeline {
    agent any
    
    tools {
        nodejs 'Node 22'  // Configure Node 22 in Jenkins Global Tool Configuration first
    }
    
    environment {
        ENVIRONMENT = 'development'
        BUILD_DIR = 'build-dev'
        PORT = '3001'
        PATH = "C:\\Program Files\\nodejs;${env.PATH}"  // Add Node.js to PATH
    }
    
    stages {
        stage('Development Build') {
            steps {
                echo 'Building for Development Environment'
                
                // Debug: Check Node.js and npm
                bat 'node --version'
                bat 'npm --version'
                bat 'where node'
                bat 'where npm'
                
                // Install and build
                bat 'npm ci'
                bat 'set CI=false && npm run build'
                bat 'rename build build-dev'
            }
        }
        
        stage('Dev Tests') {
            steps {
                bat 'npm test -- --coverage --watchAll=false'
            }
        }
        
        stage('Deploy to Dev') {
            steps {
                echo 'Deploying to Development Server'
                // Create parent directory if not exists
                bat 'if not exist "D:\\LATIHAN\\jenkins" mkdir "D:\\LATIHAN\\jenkins"'
                
                // Copy to dev folder
                bat 'if exist "D:\\LATIHAN\\jenkins\\dev" rmdir /s /q "D:\\LATIHAN\\jenkins\\dev"'
                bat 'xcopy "build-dev\\*" "D:\\LATIHAN\\jenkins\\dev\\" /E /I /Y'
                
                // Start dev server (optional)
                bat 'cd "D:\\LATIHAN\\jenkins\\dev" && start /B npx serve -s . -l %PORT%'
            }
        }
        
        stage('Archive Dev Build') {
            steps {
                archiveArtifacts artifacts: 'build-dev/**/*', fingerprint: true
            }
        }
    }
    
    post {
        success {
            echo 'Development build completed! Access at http://localhost:3001'
        }
        failure {
            echo 'Development build failed!'
        }
    }
}